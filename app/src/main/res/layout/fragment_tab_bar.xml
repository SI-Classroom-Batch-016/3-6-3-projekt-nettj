<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TabBarFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tabLayout2"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tabMode="fixed"
        android:backgroundTint="@color/md_theme_dark_onSecondary"
        app:tabGravity="fill"
        app:tabIconTintMode="src_in">
        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:icon="@drawable/home_icon"
            android:contentDescription="OutTrac"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="Routes"
            android:icon="@drawable/route"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="Objekte"
            android:icon="@drawable/objekte"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:contentDescription="Mitarbeiter"
            android:layout_width="wrap_content"
            android:icon="@drawable/angestellte_icon"
            />

    </com.google.android.material.tabs.TabLayout>


</RelativeLayout>
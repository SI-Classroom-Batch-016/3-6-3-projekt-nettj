<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:pointerIcon="none"
        app:navigationIcon="@drawable/baseline_menu_24"
        app:title="@string/datum"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temperatur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/degrees"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:textColor="@color/md_theme_dark_tertiary"
                android:drawableStart="@drawable/baseline_cloud_queue_24" />

        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/tabLayout2"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIconTintMode="src_in">
        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:icon="@drawable/home_icon"
            android:contentDescription="OutTrac"
        />
        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="Routes"
            android:icon="@drawable/route"
        />
        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="Objekte"
            android:icon="@drawable/objekte"
        />
        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:contentDescription="Mitarbeiter"
            android:layout_width="wrap_content"
            android:icon="@drawable/angestellte_icon"
        />

    </com.google.android.material.tabs.TabLayout>


</RelativeLayout>